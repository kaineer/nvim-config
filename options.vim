" Indenting and spaces

set shiftwidth=2
set autoindent
set smartindent
set expandtab
set smarttab
set number

" Autosave on leave
set autowrite

" Filetypes
filetype plugin on
syntax enable

" Mouse
set mouse=a

set ignorecase
" set smartcase

set showbreak=↪
:set listchars=eol:↲,tab:»\ ,extends:›,precedes:‹,nbsp:·,trail:·
" set listchars=tab:»\ ,extends:›,precedes:‹,nbsp:·,trail:·
set list!

set shortmess+=A
